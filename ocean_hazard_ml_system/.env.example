# .env - Environment Configuration for Ocean Hazard Detection System

# Application Settings
FLASK_ENV=development
FLASK_DEBUG=True
APP_PORT=5000
APP_HOST=0.0.0.0

# Database Configuration
DATABASE_PATH=./data/alerts.db
MODELS_PATH=./models

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=alerts@oceanhazards.com
SENDER_PASSWORD=your_app_password_here
EMAIL_ENABLED=false

# SMS Configuration (Twilio example)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
SMS_ENABLED=false

# API Configuration
API_RATE_LIMIT=100
API_TIMEOUT=30
CORS_ORIGINS=*

# Security
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET=your_jwt_secret_here

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# ML Model Configuration
MODEL_RETRAIN_INTERVAL=24
CONFIDENCE_THRESHOLD=0.7
ALERT_RADIUS_DEFAULT=50

# Geospatial Configuration
DEFAULT_LATITUDE=28.7041
DEFAULT_LONGITUDE=77.1025
MAX_ALERT_RADIUS=500

# Production Settings (change for deployment)
PRODUCTION=false
DOCKER_ENV=false

# External Services
WEATHER_API_KEY=your_weather_api_key
EARTHQUAKE_API_URL=https://earthquake.usgs.gov/earthquakes/feed/v1.0/summary/all_hour.geojson

# Notification Settings
MAX_NOTIFICATIONS_PER_USER=10
NOTIFICATION_COOLDOWN=300

# Performance Settings
CACHE_TIMEOUT=3600
MAX_WORKERS=4
WORKER_TIMEOUT=120